@model IEnumerable<MySkillsViewModel>

<div class="section px-3 px-lg-4 pt-5" id="skills">
    <div class="container-narrow">
        <div class="text-center mb-5">
            <h2 class="marker marker-center">تخصص ها</h2>
        </div>
        <div class="text-center">
            <p class="mx-auto mb-3" style="max-width: 600px">من تو بسیاری از مهارت های مورد نیاز برای توسعه برنامه های کاربردی وب و طراحی های آن تخصص دارم</p>
        </div>
        <div class="bg-light p-3 ">
            <div class="row ">
               
                    @foreach (var item in Model)
                    {
                       
                        if (item.Normal == true)
                        {
                        <div class="col-md-6">
                            <div class="py-1">
                                <div class="d-flex text-small fw-bolder"><span class="me-auto">@item.Title</span><span>40%</span></div>
                                <div class="progress my-1">
                                    <div class="progress-bar bg-primary" role="progressbar" data-aos="zoom-in-right" data-aos-delay="600" data-aos-anchor=".skills-section" style="width: 40%" aria-valuenow="40" aria-valuemin="0" aria-valuemax="100"></div>
                                </div>
                            </div>
                            </div>
                        }
                        if (item.Medium == true)
                        {
                        <div class="col-md-6">
                            <div class="py-1">
                                <div class="d-flex text-small fw-bolder"><span class="me-auto">@item.Title</span><span>60%</span></div>
                                <div class="progress my-1">
                                    <div class="progress-bar bg-primary" role="progressbar" data-aos="zoom-in-right" data-aos-delay="500" data-aos-anchor=".skills-section" style="width: 60%" aria-valuenow="60" aria-valuemin="0" aria-valuemax="100"></div>
                                </div>
                            </div>
                            </div>
                        }
                        if (item.Professional == true)
                        {
                        <div class="col-md-6">
                        <div class="py-1">
                                <div class="d-flex text-small fw-bolder"><span class="me-auto">@item.Title</span><span>80%</span></div>
                            <div class="progress my-1">
                                <div class="progress-bar bg-primary" role="progressbar" data-aos="zoom-in-right" data-aos-delay="100" data-aos-anchor=".skills-section" style="width: 80%" aria-valuenow="80" aria-valuemin="0" aria-valuemax="100"></div>
                            </div>
                        </div>
                        </div>
                        }
                    }
            </div>
        </div>
    </div>
</div>