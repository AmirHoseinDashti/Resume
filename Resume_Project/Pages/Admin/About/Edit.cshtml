@page
@model Resume_Project.Pages.Admin.About.EditModel

<div id="flHorizontalForm" class="col-lg- layout-spacing" style="padding: 50px">
    <div class="statbox widget box box-shadow">
        <div class="widget-header">
            <div class="row">
                <div class="col-xl-12 col-md-12 col-sm-12 col-12">
                    <h4>ویرایش اطلاعات</h4>
                </div>
            </div>
        </div>
        <div class="widget-content widget-content-area">
            <form id="general-info" class="section general-info" method="post" enctype="multipart/form-data">
                <input type="hidden" asp-for="About.Id"/>
                <div class="info">
                    <div class="row">
                        <div class="col-lg-11 mx-auto">
                            <div class="row">
                                <div class="col-xl-10 col-lg-12 col-md-8 mt-md-0 mt-4">
                                    <div class="form">
                                        <div class="row">
                                            <div class="col-sm-12">
                                                <div class="form-group">
                                                    <label asp-for="About.Title">عنوان</label>
                                                    <input asp-for="About.Title" type="text" class="form-control mb-4" id="fullName" placeholder="عنوان">
                                                </div>
                                            </div>
                                            <div class="col-sm-5">
                                                <div class="form-group">
                                                    <label asp-for="About.Phone">شماره تلفن</label>
                                                    <input asp-for="About.Phone" type="number" class="form-control mb-4" id="fullName" placeholder="شماره تلفن">
                                                </div>
                                            </div>
                                            <div class="col-sm-5">
                                                <div class="form-group">
                                                    <label asp-for="About.Email">ایمیل</label>
                                                    <input asp-for="About.Email" type="email" class="form-control mb-4" id="fullName" placeholder="ایمیل">
                                                </div>
                                            </div>
                                            <div class="col-sm-2">
                                                <label asp-for="About.Age" for="customFile">سن</label>
                                                <input asp-for="About.Age" type="number" class="form-control mb-4" id="fullName" placeholder="سن">
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <label asp-for="About.Description" for="profession">توضیحات </label>
                                            <textarea asp-for="About.Description" type="text" class="form-control mb-4" id="profession" placeholder="توضیحات "></textarea>
                                        </div>
                                        <div class="form-group mb-3">
                                            <label asp-for="About.Image" for="customFile">پروفایل</label>
                                            <div class="custom-file">
                                                <input asp-for="About.Image" type="file" class="custom-file-input" id="customFile">
                                                <span asp-validation-for="About.Image" class="text-danger"></span>
                                                <label class="custom-file-label" for="customFile">پروفایل مورد نظر</label>
                                            </div>
                                        </div>
                                        <br/>
                                        <input type="submit" class="btn mb-2 btn-success" value="ویرایش اطلاعات"/>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>