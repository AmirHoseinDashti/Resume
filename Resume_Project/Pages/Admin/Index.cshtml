@page
@model Resume_Project.Pages.Admin.IndexModel

@foreach (var about in Model.About)
{
    <div id="flHorizontalForm" class="col-lg- layout-spacing" style="padding: 50px">
        <div class="statbox widget box box-shadow">
            <div class="widget-header">
                <div class="row">
                    <div class="col-xl-12 col-md-12 col-sm-12 col-12">
                        <h4>درباره من</h4>
                    </div>
                </div>
            </div>
            <div class="widget-content widget-content-area">
                <form>

                    <div class="section pt-4 px-3 px-lg-4" id="about">
                        <div class="container-narrow">
                            <div class="row">
                                <div class="col-md-6">
                                    <h2 class="h4 my-2">نام و نام خانوادگی : @about.Title</h2>
                                    <p>درباره من : @about.Description</p>
                                    <div class="row mt-3">
                                        <div class="col-sm-2">
                                            <div class="pb-1">سن من : </div>
                                        </div>
                                        <div class="col-sm-10">
                                            <div class="pb-1 fw-bolder">@about.Age</div>
                                        </div>
                                        <div class="col-sm-2">
                                            <div class="pb-1">ایمیل من : </div>
                                        </div>
                                        <div class="col-sm-10">
                                            <div class="pb-1 fw-bolder">@about.Email</div>
                                        </div>
                                        <div class="col-sm-2">
                                            <div class="pb-1">شماره تلفن : </div>
                                        </div>
                                        <div class="col-sm-10">
                                            <div class="pb-1 fw-bolder">@about.Phone</div>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-5 offset-md-1 aos-init aos-animate" data-aos="fade-left" data-aos-delay="100">
                                    <img class="avatar img-fluid mt-2" src="/images/avatar.jpg" width="400" height="400" alt="Walter Patterson">
                                </div>
                            </div>
                        </div>
                    </div>
                    <button type="submit" class="btn btn-primary mt-3">تغییر اطلاعات من</button>
                </form>
            </div>
        </div>
    </div>
}