@page
@model Resume_Project.Pages.Admin.Services.EditModel

<div id="flHorizontalForm" class="col-lg- layout-spacing" style="padding: 50px">
    <div class="statbox widget box box-shadow">
        <div class="widget-header">
            <div class="row">
                <div class="col-xl-12 col-md-12 col-sm-12 col-12">
                    <h4>ویرایش خدمات</h4>
                </div>
            </div>
        </div>
        <div class="widget-content widget-content-area">
            <form id="general-info" class="section general-info" method="post" enctype="multipart/form-data">
                <input type="hidden" asp-for="Service.Id" />
                <div class="info">
                    <div class="row">
                        <div class="col-lg-11 mx-auto">
                            <div class="row">
                                <div class="col-xl-10 col-lg-12 col-md-8 mt-md-0 mt-4">
                                    <div class="form">
                                        <div class="row">
                                            <div class="col-sm-5">
                                                <div class="form-group">
                                                    <label asp-for="Service.Title">عنوان خدمات</label>
                                                    <input asp-for="Service.Title" type="text" class="form-control mb-4" id="fullName" placeholder="عنوان خدمات">
                                                    <span asp-validation-for="Service.Title" class="text-danger"></span>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="form-group mb-3">
                                            <label asp-for="Service.Image" for="customFile">تصویر</label>
                                            <div class="custom-file">
                                                <input asp-for="Service.Image" type="file" class="custom-file-input" id="customFile">
                                                <span asp-validation-for="Service.Image" class="text-danger"></span>
                                                <label class="custom-file-label" for="customFile">تصویر مورد نظر</label>
                                            </div>
                                        </div>
                                        <br />
                                        <input type="submit" class="btn mb-2 btn-success" value="ویرایش خدمات" />
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>