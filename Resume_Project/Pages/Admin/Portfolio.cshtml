@page
@model Resume_Project.Pages.Admin.PortfolioModel

<div id="flHorizontalForm" class="col-lg-12 layout-spacing" style="padding: 50px">
    <div class="statbox widget box box-shadow">
        <div class="widget-header">
            <div class="row">
                <div class="col-xl-12 col-md-12 col-sm-12 col-12">
                    <h4>نمونه کارها</h4>
                </div>
            </div>
        </div>
        <div class="widget-content widget-content-area">
            <form>

                <div id="about">
                    <div class="container-narrow">
                        <div class="row">
                            <div class="col-lg-12">
                                <div class="widget-content widget-content-area">
                                    <div class="table-responsive">
                                        <table class="table table-bordered table-striped mb-4">
                                            <thead>
                                            <tr>
                                                <th>تصویر</th>
                                                <th> نام </th>
                                                <th>توضیح</th>
                                                <th class="text-center">امکانات</th>
                                            </tr>
                                            </thead>
                                            @foreach (var item in Model.Portfolio)
                                            {
                                                <tbody>
                                                <tr>
                                                    <td>
                                                        <div class="d-flex">
                                                            <div class="usr-img-frame mr-2 rounded-circle">
                                                                <img alt="avatar" class="img-fluid rounded-circle" src="~/images/portfolio/@item.Image">
                                                            </div>
                                                        </div>
                                                    </td>
                                                    <td>@item.Name</td>
                                                    <td>@item.Description</td>
                                                    <td class="text-center">
                                                        <div class="dropdown custom-dropdown">
                                                            <a class="dropdown-toggle" href="#" role="button" id="dropdownMenuLink1" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                                                <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-more-horizontal">
                                                                    <circle cx="12" cy="12" r="1"></circle><circle cx="19" cy="12" r="1"></circle><circle cx="5" cy="12" r="1"></circle>
                                                                </svg>
                                                            </a>
                                                            <div class="dropdown-menu" aria-labelledby="dropdownMenuLink1" style="will-change: transform;">
                                                                <a class="dropdown-item" asp-page="EditPortfolio" asp-route-id="@item.Id">ویرایش</a>
                                                                <a class="dropdown-item" asp-page="DeletePortfolio" asp-route-id="@item.Id">حذف</a>
                                                            </div>
                                                        </div>
                                                    </td>
                                                </tr>
                                                </tbody>
                                            }
                                        </table>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>