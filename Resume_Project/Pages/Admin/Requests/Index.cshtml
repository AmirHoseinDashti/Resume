@page
@model Resume_Project.Pages.Admin.Requests.IndexModel

<div id="flHorizontalForm" class="col-lg-12 layout-spacing" style="padding: 50px">
    <div class="statbox widget box box-shadow">
        <div class="widget-header">
            <div class="row">
                <div class="col-xl-12 col-md-12 col-sm-12 col-12">
                    <h4>درخواست ها</h4>
                </div>
            </div>
        </div>
        <div class="widget-content widget-content-area">
            <form>

                <div id="about">
                    <div class="container-narrow">
                        <div class="row">
                            <div class="col-lg-12">
                                <div class="widget-content widget-content-area">
                                    <div class="table-responsive">
                                        <table class="table table-bordered table-striped mb-4">
                                            <thead>
                                                <tr>
                                                    <th>نام و نام خانوادگی</th>
                                                    <th> ایمیل </th>
                                                    <th>پیام</th>

                                                </tr>
                                            </thead>
                                            @foreach (var item in Model.Contact)
                                            {
                                                <tbody>
                                                    <tr>
                                                        <td>
                                                            @item.Name
                                                        </td>
                                                        <td>
                                                            @item.Email
                                                        </td>
                                                        <td>
                                                            @item.Message
                                                        </td>
                                                    </tr>
                                                </tbody>
                                            }
                                        </table>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
